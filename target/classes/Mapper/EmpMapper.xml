<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.jiyun.Mapper.EmpMapper">
    <resultMap id="queryAll" type="emp">
        <id column="eid" property="eid"></id>
        <result column="ename" property="ename"></result>
        <result column="salary" property="salary"></result>
        <result column="job" property="job"></result>
        <result column="birthday" property="birthday"></result>
        <result column="photo" property="photo"></result>
        <association property="dept" javaType="dept">
            <id column="did" property="did"></id>
            <result column="dname" property="dname"></result>
            <result column="location" property="location"></result>
        </association>
    </resultMap>

    <insert id="addEmp" parameterType="emp">
        insert into emp values(null,#{emp.ename},#{emp.salary},#{emp.job},#{emp.birthday},#{emp.photo}
        ,#{emp.did})
    </insert>
    <select id="findAll" resultMap="queryAll">
        select * from emp e left join dept d on e.did=d.did
    </select>
    <delete id="delEmpById" parameterType="int">
        delete from emp where eid=#{eid}
    </delete>

    <select id="findById" parameterType="int"  resultType="emp">
        select * from emp where eid=#{eid}
    </select>
    <update id="updateEmp" parameterType="emp" >
        update emp set eid=#{emp.eid},ename=#{emp.ename},salary=#{emp.salary},job=#{emp.job},birthday=#{emp.birthday},photo=#{emp.photo},did=#{emp.did} where eid=#{emp.eid}
    </update>
</mapper>